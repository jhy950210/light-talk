default_platform(:ios)

platform :ios do
  before_all do
    @api_key = app_store_connect_api_key(
      key_id: "288575LLF3",
      issuer_id: "645821a0-a3a4-4d60-9911-b815b8b6a1c5",
      key_filepath: "/Users/jungwheeyoung/keys/AuthKey_288575LLF3_lighttalk.p8",
    )
  end

  desc "Create certificates, profiles, build and upload to TestFlight"
  lane :release do
    cert(development: false, force: false)

    sigh(
      app_identifier: "com.lighttalk.lightTalk",
      adhoc: false,
      force: false,
    )

    profile_name = lane_context[SharedValues::SIGH_NAME]

    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      export_method: "app-store",
      output_directory: "../build/ios/ipa",
      output_name: "LightTalk.ipa",
      export_options: {
        signingStyle: "manual",
        provisioningProfiles: {
          "com.lighttalk.lightTalk" => profile_name
        }
      },
    )

    upload_to_testflight(
      skip_waiting_for_build_processing: true,
    )
  end

  desc "Upload existing IPA to TestFlight"
  lane :beta do
    upload_to_testflight(
      ipa: "../build/ios/ipa/라이트톡.ipa",
      skip_waiting_for_build_processing: true,
    )
  end

  desc "Upload metadata to App Store Connect"
  lane :metadata do
    deliver(
      skip_binary_upload: true,
      skip_screenshots: true,
      force: true,
      precheck_include_in_app_purchases: false,
    )
  end

  desc "Submit latest build for App Store review"
  lane :submit_review do |options|
    build = options[:build] || "11"

    # 기존 심사 대기 중인 버전이 있으면 취소
    begin
      app = Spaceship::ConnectAPI::App.find("com.lighttalk.lightTalk")
      version = app.get_pending_release_app_store_version || app.get_in_review_app_store_version
      if version.nil?
        versions = app.get_app_store_versions(filter: { appStoreState: "WAITING_FOR_REVIEW" })
        version = versions.first
      end
      if version
        UI.message("기존 심사 대기 버전 취소 중...")
        submission = version.fetch_app_store_version_submission
        submission.delete! if submission
        UI.success("기존 심사 취소 완료")
      end
    rescue => e
      UI.important("심사 취소 시도 중 오류 (무시): #{e.message}")
    end

    deliver(
      app_identifier: "com.lighttalk.lightTalk",
      app_version: "1.0.0",
      build_number: build,
      skip_binary_upload: true,
      skip_screenshots: true,
      skip_metadata: false,
      force: true,
      submit_for_review: true,
      automatic_release: true,
      precheck_include_in_app_purchases: false,
      app_review_information: {
        demo_user: "01000000000",
        demo_password: "tester2026",
        notes: "Demo account login:\n1. Phone: 01000000000\n2. Tap 'Send OTP', then enter 000000 (six zeros) — fixed bypass code, no SMS sent\n3. Password: tester2026\n\nFriend search: Search by nickname or nickname#tag (e.g. John#0042). Both users must be registered. No contact list access needed.",
      },
      submission_information: {
        add_id_info_uses_idfa: false,
        export_compliance_uses_encryption: false,
        export_compliance_is_exempt: true,
      },
    )
  end
end
